{
  "private": true,
  "scripts": {
    "build": "pnpm build --dir ./packages/react-vant",
    "clean": "rm -rf node_modules && rm -rf packages/**/node_modules",
    "dev": "pnpm dev --dir ./packages/react-vant",
    "docs:build": "pnpm docs:build --dir ./packages/react-vant",
    "docs:deploy": "pnpm site:deploy --dir ./packages/react-vant",
    "lint-staged": "lint-staged",
    "lint:ts": "pnpm lint --dir ./packages/react-vant",
    "react-vant:lint": "pnpm lint --dir ./packages/react-vant"
  },
  "lint-staged": {
    "*.{ts,tsx,less}": "prettier --write",
    "*.{ts,tsx}": "npm run react-vant:lint",
    "*.{css,less}": "stylelint --fix",
    "package.json": "yarn sort-package-json"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^16.2.1",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "@umijs/fabric": "^2.10.2",
    "all-contributors-cli": "^6.20.0",
    "commitlint": "^16.2.3",
    "eslint": "8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "7.0.4",
    "lint-staged": "12.4.1",
    "prettier": "2.4.1",
    "pretty-quick": "3.1.3",
    "sort-package-json": "1.56.0",
    "stylelint": "14.8.1"
  },
  "packageManager": "pnpm"
}
