{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./src/typings", "./node_modules/@types"],
    "paths": {
      "react-vant": ["src/components/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", ".rcdoc"],
  "include": ["src", "docs", "_rcdoc_", "rcdoc.config.ts"]
}
